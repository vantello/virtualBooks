extends ../layout.jade
block contenido
	h1(class="fjalla") Benvingut, 
		span(class="myblue") #{name} 
		| !
	div(class="row")
		div(class="col-sm-3")
		div(class="col-sm-6")
			div(class="row")
				div(class="col-sm text-center")
					a(href="/books/library" class="text-body arvo navi") Biblioteca
				div(class="col-sm text-center")
					a(href="/books/search" class="text-body arvo navi") Buscar
				div(class="col-sm text-center")
					a(href="/books/new" class="text-body arvo navi") Afegir LLibre
				div(class="col-sm text-center")
					a(href="/books" class="text-body arvo navi") Gestionar
	br
	br
	div(class="row")
		div(class="col-md-4")
		div(class="col-md-4")
			div(class="museum")
				form(method="POST" action="/search")
					h2(class="fjalla") .buscar
					h2(class="fjalla red")
						if(message)
							#alert
							p= message
					div(class="form-item")
						label(for="titol")
						input(type="search" name="title" placeholder="Títol del llibre" class="capitalize")
					div(class="form-item")
						label(for="autor")
						input(type="search" name="author" placeholder="Nom de l'autor" class="capitalize")
					div(class="form-item")
						label(for="editorial")
						input(type="search" name="editorial" placeholder="Editorial" class="capitalize")
					div(class="form-item")
						label(for="read")
						input(type="search" name="read" placeholder="L'he llegit? Si/No" onkeyup="this.value=this.value.toUpperCase()")
					div(class="row")
						div(class="col-sm-6")
							div(class="form-item")
								label(for="pages")
								input(type="search" name="pages" placeholder="Nº de pàgines")
						div(class="col-sm-6")
							div(class="form-item")
								label(for="maxpages")
								input(type="search" name="maxpages" placeholder="Nº màxim de pàgines")
					div(class="form-item")
						label(for="cateogry")
						input(type="search" name="category" placeholder="Temàtica" class="capitalize")
					div(class="row")
						div(class="col-sm-6")
							div(class="form-item")
								label(for="deixat")
								input(type="search" name="deixat" placeholder="L'he deixat? Si/No" onkeyup="this.value=this.value.toUpperCase()")
						div(class="col-sm-6")
							div(class="form-item")
								label(for="who")
								input(type="textbox" name="who" placeholder="A qui?" class="capitalize" )
						//div(class="form-item")
							//label(for="comments")
							//input(type="search" name="comments" placeholder="Què vols buscar dins el comentari?")			
					div(class="button-panel")
						input(type="submit" class="arvo button" value="Buscar")
